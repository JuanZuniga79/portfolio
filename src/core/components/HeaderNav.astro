---
import type IHeaderNav from "../types/IHeaderNav";
interface Props{
    path: string,
    lang: string,
}
const {path, lang} = Astro.props;
const en: IHeaderNav[] = [
    {label: "Home", path: "/"},
    {label: "Projects", path: "/projects"},
]
const items = lang === "es" ? en : en;
const download = lang === "es" ? "Descargar CV" : "Download CV";
---
<nav class="flex items-center text-base font-serif py-1.5 px-5 gap-x-4">
    {items.map((item)=>(
        <a href={`/${lang}${item.path}`}
           class={`rounded-2xl hover:text-gray-900 
            ${path.toLocaleLowerCase() === item.label.toLocaleLowerCase() ?
           "text-gray-900" : "text-gray-900/60"}`}>
            {item.label}
        </a>
    ))}
    <a href="" class="px-5 py-1.5 rounded-full bg-blue-600 text-white hover:bg-blue-800 hover:text-white">
        {download}
    </a>
</nav>

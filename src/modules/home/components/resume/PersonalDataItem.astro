---
interface Props {
  title: string;
  className: string;
}
const { title, className } = Astro.props;
---

<div
  class="border-[1px] border-neutral-200 bg-white rounded-xl grid grid-cols-8 gap-4 items-center px-3 py-1 h-full"
>
  <div class="flex items-center justify-center w-full h-full col-span-2">
    <div class={`${className} rounded-full flex items-center justify-center`}>
      <slot name="icon" />
    </div>
  </div>
  <div class="flex flex-col gap-y-0 items-start col-span-6 w-full">
    <h3 class="text-lg font-bold text-neutral-900">{title}</h3>
    <div class="font-sm font-light font-serif flex items-center justify-center">
      <slot />
    </div>
  </div>
</div>

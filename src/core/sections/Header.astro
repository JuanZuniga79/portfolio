---
import NavItem from "../components/NavItem.astro";
import HomeIcon from "../icons/HomeIcon.astro";
import PortfolioIcon from "../icons/PortfolioIcon.astro";
import BlogIcon from "../icons/BlogIcon.astro";
import ResumeIcon from "../icons/ResumeIcon.astro";
import LanguageIcon from "../icons/LanguageIcon.astro";
import ThemeIcon from "../icons/ThemeIcon.astro";
import HeaderButton from "../components/HeaderButton.astro";
interface Props {
  lang: string;
  path: string;
}
const { lang, path } = Astro.props;
---

<header
  class="font-light grid grid-cols-3 items-center w-[90%] justify-between select-none"
>
  <nav class="flex gap-x-4 items-center text-xs">
    <NavItem active={path === "home"} href={`/${lang}/`}>
      <figure class="w-5 h-5">
        <HomeIcon />
      </figure>
      <span>Home</span>
    </NavItem>
    <NavItem active={path === "resume"} href={`/${lang}/resume`}>
      <figure class="w-5 h-5 text-gray-500">
        <ResumeIcon />
      </figure>
      <span>Resume</span>
    </NavItem>
    <NavItem active={path === "projects"} href={`/${lang}/projects`}>
      <figure class="w-5 h-5">
        <PortfolioIcon />
      </figure>
      <span>Projects</span>
    </NavItem>
    <NavItem active={false} href="">
      <figure class="w-5 h-5 text-gray-500">
        <BlogIcon />
      </figure>
      <span>Blog</span>
    </NavItem>
  </nav>
  <div class="flex items-center justify-center">
    <h1 class="text-3xl font-semibold font-serif">
      {lang === "es" ? "Portafolio" : "Portfolio"}
    </h1>
  </div>
  <div class="flex gap-x-4 items-center justify-end">
    <HeaderButton id="language">
      <figure class="w-6 h-6 text-gray-500">
        <LanguageIcon />
      </figure>
    </HeaderButton>
    <HeaderButton id="theme">
      <figure class="w-6 h-6 text-gray-500 hover:text-gray-700">
        <ThemeIcon />
      </figure>
    </HeaderButton>
  </div>
  <script>
    document.getElementById("language")?.addEventListener("click", () => {
      const lang = document.documentElement.lang === "es" ? "en" : "es";
      window.location.href = `/${lang}/`;
    });
    document.getElementById("theme")?.addEventListener("click", () => {
      const body = document.body;
      body.classList.toggle("dark");
      localStorage.setItem(
        "theme",
        body.classList.contains("dark") ? "dark" : "light",
      );
    });
    localStorage.getItem("theme") === "dark" &&
      document.body.classList.add("dark");
  </script>
  <style></style>
</header>

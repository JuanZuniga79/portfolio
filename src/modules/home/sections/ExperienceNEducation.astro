---
import TimelineContainer from "../components/timeline/TimelineContainer.astro";
import TimelineCard from "../components/timeline/TimelineCard.astro";
import getEduNExp from "../services/getEduNExp";
import type ITimeline from "../types/ITimeline";
import SectionLayout from "../../../core/layouts/SectionLayout.astro";

const lang = Astro.currentLocale;
if (!lang) return;
const title =
    lang === "es" ? "Experiencia y Educaci√≥n" : "Experience & Education";
const data = getEduNExp(lang);
---

<SectionLayout title={title} subtitle="" id="education">
        <TimelineContainer>
            <div
                    class="w-[8px] rounded-2xl h-full bg-neutral-300 absolute -z-10 left-[calc(50%-4px)]"
            >
            </div>
            <div class="w-full h-fit py-4 flex flex-col gap-y-2">
                {
                    data.map((item: ITimeline, i) => (
                            <TimelineCard data={item} index={i} lang={lang} />
                    ))
                }
            </div>
        </TimelineContainer>
</SectionLayout>
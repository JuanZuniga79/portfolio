---
interface Props{
  title: string
  className: string
}
const {title, className} = Astro.props;
---
<div class="border-[1px] border-neutral-200 bg-white rounded-xl grid grid-cols-6 gap-2 items-center px-5 py-1 h-full">
  <div class={`w-fit h-fit p-1.5 rounded-full ${className} flex items-center justify-center col-span-1 h-fit`}>
    <slot name="icon"/>
  </div>
  <div class="flex flex-col gap-y-2 items-start col-span-5 w-full">
    <h3 class="text-lg font-bold text-neutral-900">{title}</h3>
    <p class="text-sm">
      <slot/>
    </p>
  </div>
</div>
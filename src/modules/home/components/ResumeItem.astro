---
interface Props {
  value: string;
  description: string;
}
const { value, description } = Astro.props;
---

<div class="flex flex-col items-center w-full">
  <span class="font-semibold text-2xl py-1 font-serif">
    {value}
  </span>
  <span class="font-extralight text-gray-800 capitalize text-base">
    {description}
  </span>
</div>

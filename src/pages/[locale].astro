---
import PageLayout from "../core/layouts/PageLayout.astro";
import Resume from "../modules/home/sections/Resume.astro";
import Projects from "../modules/home/sections/Projects.astro";
import About from "../modules/home/sections/About.astro";
import Education from "../modules/home/sections/ExperienceNEducation.astro";
import Hero from "../modules/hero/Hero.astro"
const locale = Astro.currentLocale;
if (!locale) {
    return Astro.redirect("not-found");
}
---

<PageLayout lang={locale} title="Juan Zuniga" path="home">
    <Hero/>
    <About />
    <Education />
    <Resume lang={locale} />
    <Projects lang={locale} />
</PageLayout>

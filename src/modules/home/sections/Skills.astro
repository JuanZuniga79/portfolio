---
import {frontend, backend, databases, languages} from "../data/Skills";
import SkillsItem from "../components/resume/SkillsItem.astro";
import HTML from "../assets/icons/HTML.astro"
import ServerIcon from "../assets/icons/ServerIcon.astro";
import Database from "../assets/icons/Database.astro";
import Code from "../assets/icons/Code.astro";
interface Props{
    lang:string,
}
const {lang} = Astro.props;
---
<section class="col-span-12 grid grid-cols-4 gap-5">
    <SkillsItem lang={lang} title="Frontend" item={frontend} className="bg-blue-800">
        <HTML/>
    </SkillsItem>
    <SkillsItem item={backend} lang={lang} title="Backend" className="bg-sky-600">
        <ServerIcon/>
    </SkillsItem>
    <SkillsItem item={databases} lang={lang} title={lang==="es" ? "Bases de datos" : "Databases"}
                className="bg-emerald-500">
        <Database/>
    </SkillsItem>
    <SkillsItem item={languages} lang={lang} title={lang==="es" ? "Lenguajes" : "Languages"} className="bg-amber-500">
        <Code/>
    </SkillsItem>
</section>
---
import Services from "../home/components/hero/Services.astro";
import Resume from "../home/components/hero/Resume.astro";
import TitleHero from "../home/components/hero/TitleHero.astro";
import profile from "../home/assets/images/profile.png";
import { Image } from "astro:assets";
const lang = Astro.currentLocale;
if (!lang) return;
---

<section id="hero" class="grid grid-cols-4 gap-x-2 py-10 w-full min-h-full h-full">
    <Services lang={lang} />
    <div
        class="flex flex-col items-center justify-start gap-y-6 col-span-2 h-full"
    >
        <TitleHero title="Juan C. Zuniga" />
        <div class="relative flex items-center justify-center w-[100%]">
            <div
                class="min-h-[80%] h-[80%] w-[80%] border-2 border-neutral-300 bg-white p-4 rounded-2xl
                absolute bottom-0 z-0"
            >
                <div class="bg-neutral-200 rounded-2xl w-full min-h-full"></div>
            </div>
            <Image
                src={profile}
                alt=""
                class="z-[1] h-full pb-[20px] lg:w-[300px] xl:w-[450px] 2xl:w-[600px] -ml-1 select-none object-contain"
            />
        </div>
    </div>
    <Resume lang={lang} />
</section>
